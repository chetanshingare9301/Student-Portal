<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

    <style>
        #tri
        {
            background-color:whitesmoke;
        }
    </style>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    
    <script src="/public/ajaxtest2.js"></script>

</head>
<body>
    <%- include('nav.ejs')%>
    <div class="container">
        <div  class="form-group ml-5 mr-5 " style="margin-top: 20px;">
            <input type="search" class="form-control" id="nid" placeholder="search" 
            style="height:40px;width:100%" 
            onkeyup="ajaxImpl(this.value)">
     
            </div>
    <table class="table table-bordered text-center" style="background-color: white;margin-left: 15px;margin-top: 20px;">
        <thead>
            <tr>
                <th>SRNO</th>
                <th>NAME</th>
                <th>EMAIL</th>
                <th>CONTACT</th>
                <th>COURSE</th>
                <th>DELETE</th>
                <th>UPDATE</th>
            </tr>
            </thead >
            <tbody id="tableBody">
               
                <%
                if(data.length==0){
                    %>
                    <tr id="tri"><td colspan="7"><h3>There is no data in database</h3></td> </tr>
                    <%
                }
                else
                {
                data.forEach((item,index)=>{
                %>

                <tr>
                    <td><%=(index+1)%></td>
                    <td><%=item.studentName%></td>
                    <td><%=item.email%></td>
                    <td><%=item.contact%></td>

                    <td><%=item.courseName%></td>
                    <td>
                        

                        <a href="/deletestudbyid?sid=<%= item.sid %>" class="btn btn-danger" title="Delete Student">
                            <i class="fas fa-trash"></i> Delete
                        </a>
                    </td>
                    
                    
                    <td>
                        <a href="/updatestudent?sid=<%= item.sid %>" class="btn btn-primary" title="Update Student">
                            <i class="fas fa-edit"></i> Update
                        </a>
                    </td>
                    

                <%
                })
            }
                %>

            </tbody>
            </table>
        </div>
       
</body>
 
</html>