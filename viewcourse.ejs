<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
   
    <script src="/public/ajaxtest.js"></script>

    

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
</head>
<body>
    <%- include('nav.ejs')%>
    <div class="container ml-5" style="width: 100%;">
        <div  class="form-group ml-5 mr-5 mt-15" style="margin-top: 20px;">
            <input type="search" class="form-control" id="nid" placeholder="search" style="height:40px;width:100%" onkeyup="ajaxImpl(this.value)">

            </div>
        <table class="table table-bordered text-center" style="background-color: white;margin-left: 15px;margin-top: 20px;">
            <thead >
                <tr>
                <td>Sr No</td>
                <td>Course name</td>
                <td>Delete</td>
                <td>Update name</td>
            </tr>
            </thead >
        
            <tbody id="tblBody">
                <% if(data.length == 0) { %>
                    <tr><td colspan="4"><h3>There is no data in the database</h3></td></tr>
                <% } else {
                    data.forEach((item, index) => { %>
                    <tr>
                        <td><%= index + 1 %></td>
                        <td><%= item.name %></td>
                        <td>
                            <a href="/deletecoursebyid?courseid=<%= item.courseid %>" class="btn btn-danger" title="Delete Course">
                                <i class="fas fa-trash"></i> Delete
                            </a>
                        </td>
                        <td>
                            <a href="/updatecoursebyid?courseid=<%= item.courseid %>" class="btn btn-primary" title="Update Course">
                                <i class="fas fa-edit"></i> Update
                            </a>
                            
                                
                            
                        </td>
                    </tr>
                <% }) } %>
            </tbody>
            
        </table>
    </div>
   
</body>

</html>
 
