<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
    <script type="text/javascript" src="/public/validate.js"></script>
</head>
<body>
    <%- include('nav.ejs')%>
    <div class="dear mt-5">
        <form action="/update" method="post">
            <div class="form-group" style="margin-top: 20px;">
               

                <input type="hidden" name="sid" value="<%= erecord[0].sid %>">


        </div>

        


       
<div class="d-flex justify-content-center"> 
  <div class="form-group d-flex flex-column align-items-center">
    <input type="text" class="form-control" name="name" id="nid"
           placeholder="Enter Name" value="<%= erecord[0].studentName %>"
           style="height:40px; width:800px;" onkeyup="validateName(this.value)">
    <span id="nmsg" class="small mt-1 text-center" style="width:800px;"></span>
  </div>
</div>
            
<div class="d-flex justify-content-center">
  <div class="form-group d-flex flex-column align-items-center">
    <input type="text" class="form-control" name="email" id="eid" 
           placeholder="Enter Email" value="<%= erecord[0].email %>"  
           style="height:40px; width:800px;" onkeyup="validateEmail(this.value)">
    
    <span id="emsg" class="small mt-1 text-center" style="width:800px;"></span>
  </div>
</div>

             <!-- <div class="d-flex justify-content-center">
             <div  class="form-group d-flex justify-content-center">
                <input type="text" class="form-control" name="contact" id="cid" placeholder="Enter Contact" value="<%= erecord[0].contact %>"  style="height:40px;width:800px" onkeyup="validateContact(this.value)">
                    <span id="cmsg" class="small mt-1 text-center" style="width:800px;"></span>    
            </div>
            </div> -->

            <div class="d-flex justify-content-center">
  <div class="form-group d-flex flex-column align-items-center">
    <input type="text" class="form-control" name="contact" id="cid"
           placeholder="Enter Contact" value="<%= erecord[0].contact %>"
           style="height:40px; width:800px;" onkeyup="validateContact(this.value)">
    
    <span id="cmsg" class="small mt-1 text-center" style="width:800px;"></span>
  </div>
</div>

            <div class="form-group d-flex justify-content-center"></div>
            <label for="course" style=" font-size: 1em; color: white; display: inline-block; margin-bottom:8px; margin-left:240px;">Course:</label>

            <div class="form-group text-center">
   
    <select name="courseid" id="course" class="form-control mx-auto" style="height: 40px; width: 800px; margin-bottom: 20px;">
        <% data.forEach((item, index) => { %>
            <option value="<%= item.courseid %>" <%= item.courseid === parseInt(erecord[0].courseid) ? "selected" : "" %>>
                <%= item.name %>
            </option>
        <% }); %>
    </select>
</div>

            
        
        
       <div class="form-group d-flex justify-content-center"  style="margin-top: 30px;">
            <input type="submit" class="form-control" id="ns"  value="Update Student" style="height: 40px; width: 300px; background-color: skyblue">    
        </div>
    </form> 
    </div>

    


    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.3/dist/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
    
</body>
</html>